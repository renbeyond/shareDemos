<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent">

        <TextView
            android:id="@+id/dia_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bauer_bg_dialog_blue_top"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:paddingTop="10dp"
            android:text="title"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/dia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dia_title"
            android:background="@drawable/bauer_bg_dialog_white_content_gender">

            <FrameLayout
                android:id="@+id/content_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="16dp">

                <TextView
                    android:id="@+id/tv_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="ddd"
                    android:textColor="#00aa00"
                    android:textSize="14sp" />

            </FrameLayout>
        </RelativeLayout>

        <View
            android:id="@+id/middle_horizontal_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/dia"
            android:background="@color/color_0" />

        <com.example.demo.bauer.dialog.PWDialogButton
            android:id="@+id/btn_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/middle_horizontal_line"
            android:background="@drawable/bauer_bg_dialog_gray_ok2" />
    </RelativeLayout>

</RelativeLayout>